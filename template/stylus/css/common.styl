@import 'includes/normalize.styl'

html, body
	width 100%
	height 100%

body
	box-shadow inset 0 0 24px #999
	background #efefef
	&.connected
		background #fff

input, textarea
	appearance none

#message
	textarea
		width 100%
		height 100%
		border none

#name
	overflow hidden
	input
		position absolute
		width 90%
		padding 4px 8px 8px
		bottom 50px
		border 1px solid #8b8b8b
		border-radius 10px
		font-size 5rem
		text-align center
		box-sizing border-box
